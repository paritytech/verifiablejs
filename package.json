{
  "name": "verifiable-js-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for verifiablejs package and playgrounds",
  "scripts": {
    "build": "pnpm --filter verifiablejs build",
    "dev:vite": "pnpm --filter playground-vite dev",
    "dev:bun": "pnpm --filter playground-bun dev",
    "test": "pnpm --filter verifiablejs test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
